.note
  width: 250px;
  border-radius: 40px;
  float: left;
  //display: inline-block;
  margin-left: 16px;
  margin-bottom: 16px;
  .note-header
    height: 32px;
    line-height: 32px;
    font-size: 16px;
    text-align: center;
    color: white;
    background-color: #40877c;
  //.note-body
  //  height: 280px;
  //  background-color: #f3f4e5;
  .note-footer
    height: 30px;
    background-color: #dcddcf;
  .note-body
    width: 250px;
    height: 280px;
    padding: 5px 8px;
    //font-size: 14px;
    line-height: 1.5;
    border: none;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    color: black;
    background-color: #f3f4e5;
    outline: none;
    resize: none;
    &::-webkit-scrollbar
      width: 2px;
      height: 3px;
      //border-radius: 3px;
    &::-webkit-scrollbar-track-piece
      background-color:#f0f1f7;
      //border-radius:3px;
    &::-webkit-scrollbar-thumb
      background-color:#40877c;
